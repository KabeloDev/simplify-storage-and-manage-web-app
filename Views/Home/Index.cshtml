@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="d-flex justify-content-between">
    <img src="https://media.istockphoto.com/id/1426090631/vector/young-man-standing-with-thoughtful-expression-and-holding-paper-notebook-thinking-man.jpg?s=612x612&w=0&k=20&c=g1pl_-t5az6fbmd3A9PFePhGOGgI55sKYU5tTW7t4Ik=" height="350" width="350" class="py-2"/>
    <img src="https://img.freepik.com/free-vector/man-taking-break-from-work_23-2148508516.jpg" height="350" width="350" class="py-2" />
    <img src="https://img.freepik.com/premium-vector/cartoon-character-organizing-time-time-management-efficiency-good-business-process-man-standing-near-calendar-with-different-tasks-looking-notes-flat-vector-illustration_776652-2764.jpg" height="350" width="350" class="py-2" />
   
</div>

<div class="text-center mb-3">
    <h3>Store, Organize, Succeed – Your Life, Simplified.</h3>
</div>

<div>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://www.shutterstock.com/image-photo/document-management-systemonline-documentation-database-600nw-2285181395.jpg" class="d-block w-100" alt="This is image 1" height="700" width="700">
                <div class="carousel-caption d-none d-md-block">

                    <h5>Streamline Your Document Management!</h5>
                    <p>
                        Our platform provides an easy and secure way to store, manage, and access all your important documents. Say goodbye to the clutter and chaos of paperwork – we’re here to help you stay organized and efficient.
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://ischool.umd.edu/wp-content/uploads/phonecamera_0-1024x512.jpg" class="d-block w-100" alt="this is image 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Store Moments Seamlessly!</h5>
                    <p>
                        With our intuitive interface, uploading and organizing your photos has never been easier. Preserve your memories in one place, accessible anytime, from anywhere.!
                    </p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://i0.wp.com/humalogy.ai/wp-content/uploads/2024/06/is-appointment-setter-a-hard-job.jpg?fit=1200%2C628&ssl=1" class="d-block w-100" alt="This is image 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Simplify Your Scheduling!</h5>
                    <p>
                        Managing appointments and tasks is a breeze with our built-in calendar. Stay on top of your busy schedule and never miss an important date again with real-time notifications and reminders.
                    </p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<div class="container text-center my-5">
    <div class="row">
        <div class="col-md-4">
            <i class="bi bi-cloud-upload" style="font-size: 2rem;"></i>
            <h5>Secure Cloud Storage</h5>
            <p>Store all your important files in a secure and accessible cloud environment.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-images" style="font-size: 2rem;"></i>
            <h5>Photo Gallery</h5>
            <p>Easily upload and organize your memories in an intuitive gallery.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-calendar" style="font-size: 2rem;"></i>
            <h5>Task Scheduling</h5>
            <p>Manage your schedule with our built-in calendar and reminder system.</p>
        </div>
    </div>
</div>
<div class="container text-center my-5">
    <h2>What Our Users Are Saying</h2>
    <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <p>"This platform has completely changed the way I organize my life! It's so easy to use."</p>
                <h5>- Jane Doe</h5>
            </div>
            <div class="carousel-item">
                <p>"I love being able to store my documents and images all in one place."</p>
                <h5>- John Smith</h5>
            </div>
            <div class="carousel-item">
                <p>"The scheduling feature has helped me stay on top of my tasks like never before!"</p>
                <h5>- Sarah Lee</h5>
            </div>
        </div>
    </div>
</div>
<footer class="bg-light text-center text-lg-start">
    <div class="container p-4">
        <div class="row">
            <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                <h5>Contact Us</h5>
                <p>48 Springbok Street, Bayswater, Bloemfontein, 9300, South Africa</p>
                <p>Phone: +27763882472</p>
            </div>
            <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                <h5>Follow Us</h5>
                <a href="https://www.facebook.com/login/" target="_blank" class="me-4">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="https://twitter.com/i/flow/login" target="_blank" class="me-4">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="https://www.linkedin.com/login" target="_blank" class="me-4">
                    <i class="bi bi-linkedin"></i>
                </a>
            </div>
        </div>
    </div>
</footer>


