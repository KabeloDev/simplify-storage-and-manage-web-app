@model TextEditor.Models.Events

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text-primary">Task details</h1>
<h4 class="text-center text-secondary">View and manage task information</h4>
<hr class="w-25 mx-auto" />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="bg-light p-4 rounded shadow-lg">
            <div class="mb-3">
                <label class="fw-bold">Event Name:</label>
                <p class="border rounded p-2 bg-white">@Model.Name</p>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Description:</label>
                <p class="border rounded p-2 bg-white">@Model.Description</p>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Start Time:</label>
                <p class="border rounded p-2 bg-white">@Model.StartTime.ToString("yyyy-MM-dd HH:mm")</p>
            </div>

            <div class="mb-3">
                <label class="fw-bold">End Time:</label>
                <p class="border rounded p-2 bg-white">@Model.EndTime.ToString("yyyy-MM-dd HH:mm")</p>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Location:</label>
                <p class="border rounded p-2 bg-white">@Model.Location</p>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Status:</label>
                <span class="badge @(Model.IsComplete ? "bg-success" : "bg-warning")">
                    @(Model.IsComplete ? "Complete" : "Incomplete")
                </span>
            </div>

            <div class="text-center mt-4 d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit Task</a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this task?');" class="me-2">
                    <button type="submit" class="btn btn-danger">Delete Task</button>
                </form>
                <form asp-action="ToggleComplete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn @(Model.IsComplete ? "btn-warning" : "btn-success")">
                        Mark as @(Model.IsComplete ? "Incomplete" : "Complete")
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-primary">Back to Tasks</a>
</div>
